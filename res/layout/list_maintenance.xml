<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relItem"
    android:layout_width="fill_parent"
    android:layout_height="180dp"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >  
    <com.e46bimmerscommunity.gridview.DynamicHeightImageView
        android:id="@+id/imgPreview"
       	android:layout_width="match_parent"
       	android:layout_height="180dp"
       	android:background="@android:color/white"
       	android:scaleType="centerCrop"
    	android:contentDescription="@string/action_settings" />
	<ImageView android:layout_width="fill_parent"
    	android:layout_height="180dp"
    	android:background="@drawable/transparent_background_black"
    	android:contentDescription="@string/action_settings"
        android:layout_alignParentBottom="true" />
	<TextView android:id="@+id/txtTitle"
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:textColor="#FFF"
    	android:textSize="@dimen/activity_vertical_margin"
    	android:textAllCaps="true"
    	android:paddingLeft="10dip"
    	android:paddingBottom="30dip"
        android:layout_alignParentBottom="true" />
	<TextView android:id="@+id/txtBy"
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:textColor="#FFF"
    	android:textSize="@dimen/font_smallest"
    	android:textAllCaps="false"
    	android:paddingLeft="10dip"
    	android:paddingBottom="15dip"
        android:layout_alignParentBottom="true" />
	<TextView android:id="@+id/txtDetail"
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:visibility="gone" />
</RelativeLayout>  