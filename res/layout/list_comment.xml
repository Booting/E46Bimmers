<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingTop="8dp"
	android:paddingBottom="8dp">
 	<!--  PROFILE IMAGE -->
 	<RelativeLayout android:layout_width="40dp"
		android:layout_height="40dp"
  		android:layout_marginLeft="0dp">
  		<com.e46bimmerscommunity.utils.CircleImageView
   			xmlns:app="http://schemas.android.com/apk/res-auto"
   			android:id="@+id/profileImage"
		   	android:layout_width="40dp"
		   	android:layout_height="40dp"
		   	app:civ_border_width="1dp"
		   	app:civ_border_color="#1A000000" />
 	</RelativeLayout>
	<!-- BLUE LEFT ARROW -->
    <ImageView android:layout_width="15dp"
		android:layout_height="15dp"
		android:src="@drawable/left_arrow"
     	android:layout_marginLeft="2dp"
     	android:layout_marginTop="6dp" />
    <!-- TEXTVIEW -->
    <LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:paddingTop="8dp"
		android:paddingBottom="5dp"
		android:layout_marginLeft="-7dp"
		android:background="@drawable/custom_comment">
	    <TextView android:id="@+id/txtUser"
	      	android:layout_width="wrap_content"
	      	android:layout_height="wrap_content"
	      	android:textColor="#616161"
	      	android:textSize="10sp"
	      	android:text="DanielNapitupulu#SuperUser" />
	    <TextView android:id="@+id/txtComment"
	      	android:layout_width="wrap_content"
	      	android:layout_height="wrap_content"
	      	android:textColor="#323434"
	      	android:textSize="14sp"
	      	android:text="Hahhaaaa....\nMantab coy, salut!!!" />
    </LinearLayout>
</LinearLayout>